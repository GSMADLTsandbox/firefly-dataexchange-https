{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "api",
    "p2p",
    "peers"
  ],
  "properties": {
    "api": {
      "type": "object",
      "required": [
        "hostname",
        "port"
      ],
      "properties": {
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        }
      }
    },
    "p2p": {
      "type": "object",
      "required": [
        "hostname",
        "port"
      ],
      "properties": {
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        }
      }
    },
    "apiKey": {
      "type": "string"
    },
    "peers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "endpoint"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "endpoint": {
            "type": "string"
          }
        }
      }
    }
  }
}
