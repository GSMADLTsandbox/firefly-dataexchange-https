{
  "name": "firefly-dataexchange",
  "version": "1.0.0",
  "description": "FireFly Data Exchange",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./build",
    "copy-swagger": "cp ./src/swagger.yaml ./build",
    "build": "npm run clean && tsc && npm run copy-swagger",
    "start:dev": "nodemon",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "test": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaleido-io/firefly-dataexchange-https"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.6.3",
    "axios": "^0.23.0",
    "busboy": "^0.3.1",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "jsrsasign": "^10.4.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "ws": "^8.2.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.7",
    "@types/busboy": "^0.3.1",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/jsrsasign": "^8.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.5",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^8.2.0",
    "@types/yamljs": "^0.2.31",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "moment": "^2.29.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.20",
    "ts-node": "^10.4.0",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.4.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage",
      "test",
      "build",
      "**/*.d.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "mocha": {
    "recursive": true,
    "extension": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  }
}
